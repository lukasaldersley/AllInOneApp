<Page
    x:Class="AllInOneApp.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AllInOneApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <Button x:Name="InspectRoaming" Content="Show RoamingFolder" Click="InspectRoaming_Click" Margin="5"/>
        <Button x:Name="InspectLocal" Content="Show LocalFolder" Click="InspectLocal_Click" Margin="5"/>
        <Button x:Name="ChangeGarfieldFolder" Content="Change Garfield Output Folder" Click="ChangeGarfieldFolder_Click" Margin="5"/>
        <Button x:Name="ChangeXKCDFolder" Content="Change XKCD Output folder" Click="ChangeXKCDFolder_Click" Margin="5"/>
        <Button x:Name="DriveSystemSettings" Content="DriveSystemSettings" Click="DriveSystemSettings_Click" Margin="5"/>
    </StackPanel>
</Page>
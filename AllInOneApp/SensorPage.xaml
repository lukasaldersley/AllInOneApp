<Page
    x:Class="AllInOneApp.SensorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AllInOneApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel>
            <Button x:Name="Sample" Click="Sample_Click" Content="Initialisieren" Margin="10" Height="100" Width="200"/>
            <Button x:Name="startStop" Click="StartStop_Click" Content="Start/Stop" Margin="10" Height="100" Width="200"/>
            <Button x:Name="pacer" Click="Pacer_Click" Content="Toggle Pace" Margin="10" Height="100" Width="200"/>
            <TextBox x:Name="cnt" AcceptsReturn="False" IsHitTestVisible="False" IsReadOnly="True"/>
            <TextBox x:Name="OUT" AcceptsReturn="True" IsHitTestVisible="False" IsReadOnly="True"/>
        </StackPanel>
    </ScrollViewer>
</Page>
